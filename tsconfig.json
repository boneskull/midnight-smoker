{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": true,
    "outDir": "dist",
    "types": ["node", "sinon", "mocha"],
    "paths": {
      "midnight-smoker": ["./src/index"]
    }
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["src", "test"]
}
