{
  "name": "midnight-smoker",
  "version": "7.0.2",
  "description": "Run smoke tests against packages as they would be published",
  "repository": {
    "type": "git",
    "url": "https://github.com/boneskull/midnight-smoker"
  },
  "homepage": "https://github.com/boneskull/midnight-smoker",
  "bugs": {
    "url": "https://github.com/boneskull/midnight-smoker/issues"
  },
  "author": "Christopher Hiller <boneskull@boneskull.com> (https://boneskull.com/)",
  "license": "Apache-2.0",
  "engines": {
    "node": "^16.20.0 || ^18.0.0 || ^20.0.0",
    "npm": ">=7"
  },
  "bin": {
    "smoker": "./bin/smoker.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./data",
    "./dist",
    "./schema",
    "./src",
    "!**/*.tsbuildinfo"
  ],
  "keywords": [
    "test",
    "testing",
    "smoke",
    "smoketest",
    "user",
    "enduser",
    "production",
    "publish",
    "package",
    "npm",
    "ci",
    "workspace",
    "workspaces"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "tsc -b --clean",
    "dev": "tsc -b --watch",
    "husky-install": "husky install",
    "lint": "run-p lint:eslint lint:md",
    "lint:commit": "commitlint",
    "lint:eslint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:md": "markdownlint-cli2 \"README.md\"",
    "lint:staged": "lint-staged",
    "prepare": "run-p husky-install rebuild",
    "pretest:e2e": "run-s build",
    "preversion": "run-s update-schema && git add -A ./schema/midnight-smoker.schema.json",
    "rebuild": "run-s clean build",
    "smoke:js": "node ./bin/smoker.js --version",
    "smoke:ts": "ts-node -D ./src/cli.ts --version",
    "test": "run-s test:unit test:smoke",
    "test:ci": "run-s test:unit test:smoke test:e2e",
    "test:e2e": "mocha --timeout 20s --slow 10s \"test/e2e/**/*.spec.ts\"",
    "test:smoke": "node ./bin/smoker.js smoke:ts smoke:js --add ts-node --add @tsconfig/node16",
    "test:unit": "mocha \"test/unit/**/*.spec.ts\"",
    "test:update-snapshots": "cross-env SNAPSHOT_UPDATE=1 npm run test:e2e -- --fgrep \"[snapshot]\"",
    "update-schema": "ts-node ./scripts/generate-schema.ts && prettier --write ./schema/midnight-smoker.schema.json"
  },
  "dependencies": {
    "@types/semver": "7.5.2",
    "chalk": "4.1.2",
    "corepack": "0.20.0",
    "debug": "4.3.4",
    "deepmerge": "4.3.1",
    "execa": "5.1.1",
    "glob": "10.3.7",
    "is-file-esm": "1.0.0",
    "lilconfig": "2.1.0",
    "log-symbols": "4.1.0",
    "ora": "5.4.1",
    "pluralize": "8.0.0",
    "read-pkg-up": "7.0.1",
    "semver": "7.5.4",
    "source-map-support": "0.5.21",
    "strict-event-emitter-types": "2.0.0",
    "which": "4.0.0",
    "yargs": "17.7.2",
    "zod": "3.22.2",
    "zod-validation-error": "1.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.7.1",
    "@commitlint/config-conventional": "17.7.0",
    "@tsconfig/node16": "16.1.1",
    "@types/debug": "4.1.9",
    "@types/is-file-esm": "1.0.0",
    "@types/mocha": "10.0.1",
    "@types/node": "18.17.19",
    "@types/pluralize": "0.0.31",
    "@types/sinon": "10.0.16",
    "@types/source-map-support": "0.5.7",
    "@types/which": "3.0.0",
    "@types/yargs": "17.0.25",
    "@typescript-eslint/eslint-plugin": "6.7.2",
    "@typescript-eslint/parser": "6.7.2",
    "cross-env": "7.0.3",
    "eslint": "8.50.0",
    "eslint-config-prettier": "8.10.0",
    "eslint-config-semistandard": "17.0.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-n": "15.7.0",
    "eslint-plugin-promise": "6.1.1",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "markdownlint-cli2": "0.10.0",
    "mocha": "10.2.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.3",
    "prettier-plugin-organize-imports": "3.2.3",
    "prettier-plugin-pkg": "0.18.0",
    "rewiremock": "3.14.5",
    "sinon": "16.0.0",
    "snap-shot-it": "7.9.10",
    "strip-ansi": "5.2.0",
    "ts-node": "10.9.1",
    "typescript": "5.2.2",
    "unexpected": "13.2.1",
    "unexpected-eventemitter": "2.4.0",
    "unexpected-sinon": "11.1.0",
    "zod-to-json-schema": "3.21.4"
  },
  "overrides": {
    "debug": "4.3.4"
  },
  "prettier": {
    "bracketSpacing": false,
    "endOfLine": "auto",
    "singleQuote": true,
    "plugins": [
      "prettier-plugin-organize-imports",
      "prettier-plugin-pkg"
    ]
  }
}
