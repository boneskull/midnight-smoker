{
  "name": "midnight-smoker-monorepo",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boneskull/midnight-smoker.git"
  },
  "homepage": "https://github.com/boneskull/midnight-smoker",
  "bugs": {
    "url": "https://github.com/boneskull/midnight-smoker/issues"
  },
  "author": "Christopher Hiller <boneskull@boneskull.com> (https://boneskull.com/)",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "^18.0.0 || ^20.0.0 || ^22.0.0",
    "npm": ">=8.6.0"
  },
  "scripts": {
    "build": "tsc -b",
    "clean": "shx rm -rf \"packages/*/dist\" \"packages/*/*.tsbuildinfo\" \"packages/src/*.tsbuildinfo\" \"packages/*/test/*.tsbuildinfo\" \"packages/scripts/*.tsbuildinfo\"",
    "dev": "tsc -b --watch",
    "dev:docs": "npx docsify-cli serve docs",
    "docs:build": "shx cp ./packages/midnight-smoker/README.md ./docs/README.md",
    "husky-install": "husky install",
    "lint": "run-p lint:eslint lint:md lint:deps",
    "lint:commit": "commitlint",
    "lint:deps": "depcruise -c ./.config/dependency-cruiser.js packages",
    "lint:eslint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:md": "markdownlint-cli2 \"**/*.md\"",
    "lint:staged": "lint-staged",
    "prepare": "run-p husky-install build",
    "pretest:e2e": "run-s build",
    "rebuild": "run-s clean build",
    "test": "npm test --workspaces --if-present",
    "test:ci": "npm run --workspaces --if-present test:ci",
    "test:coverage": "c8 -- npm run test:unit",
    "test:e2e": "npm run --workspaces --if-present test:e2e",
    "test:smoke": "npm run --workspaces --if-present test:smoke",
    "test:snapshots-only": "npm run --workspaces --if-present test:snapshots-only",
    "test:unit": "npm run --workspaces --if-present test:unit",
    "test:update-snapshots": "npm run --workspaces --if-present test:update-snapshots",
    "update-schema": "npm run --workspace midnight-smoker update-schema"
  },
  "devDependencies": {
    "@commitlint/cli": "17.8.1",
    "@commitlint/config-conventional": "17.8.1",
    "@stylistic/eslint-plugin-js": "2.1.0",
    "@stylistic/eslint-plugin-ts": "2.1.0",
    "@swc/core": "1.3.107",
    "@tsconfig/node18": "18.2.4",
    "@types/mocha": "10.0.6",
    "@types/node": "20.14.11",
    "@types/sinon": "17.0.2",
    "@types/source-map-support": "0.5.10",
    "@types/wallabyjs": "0.0.15",
    "@typescript-eslint/eslint-plugin": "6.14.0",
    "@typescript-eslint/parser": "6.14.0",
    "c8": "10.1.2",
    "cross-env": "7.0.3",
    "dependency-cruiser": "15.5.0",
    "eslint": "8.55.0",
    "eslint-plugin-jsonc": "2.13.0",
    "eslint-plugin-mocha": "10.5.0",
    "eslint-plugin-n": "15.7.0",
    "eslint-plugin-perfectionist": "3.0.0",
    "glob": "10.3.10",
    "husky": "8.0.3",
    "impvol": "0.1.7",
    "knip": "5.16.0",
    "lint-staged": "15.2.10",
    "markdownlint-cli2": "0.14.0",
    "markdownlint-cli2-formatter-pretty": "0.0.5",
    "minimatch": "9.0.4",
    "mocha": "10.2.0",
    "npm-run-all2": "6.2.2",
    "prettier": "3.1.1",
    "prettier-plugin-astro": "0.12.3",
    "prettier-plugin-jsdoc": "1.1.1",
    "prettier-plugin-organize-imports": "3.2.4",
    "prettier-plugin-pkg": "0.18.0",
    "shx": "0.3.4",
    "sinon": "16.1.3",
    "snap-shot-it": "7.9.10",
    "tsd": "0.31.0",
    "tsx": "4.17.0",
    "type-fest": "4.19.0",
    "typescript": "5.6.2",
    "unexpected": "13.2.1",
    "unexpected-sinon": "11.1.0"
  },
  "overrides": {
    "debug": "4.3.4",
    "type-fest": "$type-fest"
  },
  "prettier": {
    "bracketSpacing": false,
    "endOfLine": "auto",
    "singleQuote": true,
    "plugins": [
      "prettier-plugin-astro",
      "prettier-plugin-organize-imports",
      "prettier-plugin-pkg",
      "prettier-plugin-jsdoc"
    ],
    "jsdocCommentLineStrategy": "multiline",
    "tsdoc": true
  }
}
