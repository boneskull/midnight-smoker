{
  "name": "midnight-smoker",
  "version": "8.0.0",
  "description": "Smoke test & lint your package artifacts (instead of failing miserably)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boneskull/midnight-smoker.git",
    "directory": "packages/midnight-smoker"
  },
  "homepage": "https://boneskull.github.io/midnight-smoker",
  "bugs": {
    "url": "https://github.com/boneskull/midnight-smoker/issues"
  },
  "author": "Christopher Hiller <boneskull@boneskull.com> (https://boneskull.com/)",
  "license": "Apache-2.0",
  "engines": {
    "node": "^18.0.0 || ^20.0.0",
    "npm": ">=8.6.0"
  },
  "bin": {
    "smoker": "bin/smoker.js"
  },
  "main": "./dist/index.js",
  "imports": {
    "#cli/*": "./dist/cli/*.js",
    "#config/*": "./dist/config/*.js",
    "#constants": "./dist/constants.js",
    "#machine/*": "./dist/machine/*/index.js",
    "#error/*": "./dist/error/*.js",
    "#event/*": "./dist/event/*.js",
    "#executor": "./dist/executor/index.js",
    "#options/*": "./dist/options/*.js",
    "#pkg-manager/*": "./dist/pkg-manager/*.js",
    "#plugin/*": "./dist/plugin/*.js",
    "#reporter/*": "./dist/reporter/*.js",
    "#rule/*": "./dist/rule/*.js",
    "#schema/*": "./dist/schema/*.js",
    "#smoker": "./dist/smoker.js",
    "#util/*": "./dist/util/*.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "typedoc": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./plugin": {
      "types": "./dist/plugin/index.d.ts",
      "typedoc": "./src/plugin/index.ts",
      "default": "./dist/plugin/index.js"
    },
    "./error": {
      "types": "./dist/error/index.d.ts",
      "typedoc": "./src/error/index.ts",
      "default": "./dist/error/index.js"
    },
    "./event": {
      "types": "./dist/event/index.d.ts",
      "typedoc": "./src/event/index.ts",
      "default": "./dist/event/index.js"
    },
    "./machine": {
      "types": "./dist/machine/index.d.ts",
      "typedoc": "./src/machine/index.ts",
      "default": "./dist/machine/index.js"
    },
    "./rule": {
      "types": "./dist/rule/index.d.ts",
      "typedoc": "./src/rule/index.ts",
      "default": "./dist/rule/index.js"
    },
    "./reporter": {
      "types": "./dist/reporter/index.d.ts",
      "typedoc": "./src/reporter/index.ts",
      "default": "./dist/reporter/index.js"
    },
    "./executor": {
      "types": "./dist/executor/index.d.ts",
      "typedoc": "./src/executor/index.ts",
      "default": "./dist/executor/index.js"
    },
    "./options": {
      "types": "./dist/options/index.d.ts",
      "typedoc": "./src/options/index.ts",
      "default": "./dist/options/index.js"
    },
    "./pkg-manager": {
      "types": "./dist/pkg-manager/index.d.ts",
      "typedoc": "./src/pkg-manager/index.ts",
      "default": "./dist/pkg-manager/index.js"
    },
    "./package.json": "./package.json",
    "./smoker": "./bin/smoker.js",
    "./constants": {
      "types": "./dist/constants.d.ts",
      "typedoc": "./src/constants.ts",
      "default": "./dist/constants.js"
    },
    "./util": {
      "types": "./dist/util/index.d.ts",
      "typedoc": "./src/util/index.ts",
      "default": "./dist/util/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "./bin",
    "./dist",
    "./schema",
    "./src",
    "CHANGELOG.md",
    "!**/*.tsbuildinfo",
    "!jsconfig.json",
    "!tsconfig.json"
  ],
  "keywords": [
    "test",
    "testing",
    "smoke",
    "smoketest",
    "user",
    "enduser",
    "production",
    "publish",
    "package",
    "npm",
    "ci",
    "workspace",
    "workspaces"
  ],
  "scripts": {
    "preversion": "run-s update-schema && git add -A ./schema/midnight-smoker.schema.json",
    "smoke:js": "node ./bin/smoker.js --version",
    "smoke:ts": "ts-node -D ./src/cli.ts --version",
    "test": "run-s test:unit test:smoke",
    "test:ci": "run-s test:unit test:smoke test:e2e",
    "test:e2e": "mocha --timeout 20s --slow 10s \"test/e2e/**/*.spec.ts\"",
    "test:smoke": "node ./bin/smoker.js run smoke:ts smoke:js --add ts-node --add @tsconfig/node16",
    "test:snapshots-only": "npm run test:e2e -- --fgrep \"[snapshot]\"",
    "test:unit": "mocha \"test/unit/**/*.spec.ts\"",
    "test:update-snapshots": "cross-env SNAPSHOT_UPDATE=1 npm run test:e2e -- --fgrep \"[snapshot]\"",
    "update-schema": "ts-node ./scripts/generate-schema.ts"
  },
  "dependencies": {
    "@midnight-smoker/plugin-default": "file:../plugin-default",
    "@types/semver": "7.5.6",
    "async-mitt": "0.0.0",
    "chalk": "4.1.2",
    "cli-table3": "0.6.3",
    "debug": "4.3.4",
    "deepmerge": "4.3.1",
    "dreidels": "0.6.1",
    "execa": "5.1.1",
    "glob": "10.3.10",
    "lodash": "4.17.21",
    "minimatch": "9.0.3",
    "mitt": "3.0.1",
    "read-pkg-up": "7.0.1",
    "semver": "7.5.4",
    "source-map-support": "0.5.21",
    "strict-event-emitter-types": "2.0.0",
    "string-width": "4.2.3",
    "stringify-object": "3.3.0",
    "terminal-link": "2.1.1",
    "type-fest": "4.8.3",
    "which": "4.0.0",
    "xstate": "5.11.0",
    "yargs": "17.7.2",
    "zod": "3.22.4",
    "zod-validation-error": "2.1.0"
  },
  "devDependencies": {
    "@types/debug": "4.1.12",
    "@types/is-file-esm": "1.0.3",
    "@types/json-stable-stringify": "1.0.35",
    "@types/lodash": "4.14.202",
    "@types/pluralize": "0.0.33",
    "@types/stringify-object": "3.3.1",
    "@types/which": "3.0.3",
    "@types/yargs": "17.0.32",
    "memfs": "4.6.0",
    "strip-ansi": "5.2.0",
    "zod-to-json-schema": "3.22.3"
  },
  "overrides": {
    "zod": "$zod"
  }
}
