{
  "name": "@midnight-smoker/tarball-installer",
  "version": "0.0.0",
  "description": "Packs a workspace and installs it somewhere",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boneskull/midnight-smoker.git",
    "directory": "packages/tarball-installer"
  },
  "homepage": "https://github.com/boneskull/midnight-smoker/tree/main/packages/tarball-installer",
  "bugs": {
    "url": "https://github.com/boneskull/midnight-smoker/issues"
  },
  "author": "Christopher Hiller <boneskull@boneskull.com> (https://boneskull.com/)",
  "license": "Apache-2.0",
  "engines": {
    "node": "^18.0.0 || ^20.0.0 || ^22.0.0",
    "npm": ">=8.6.0"
  },
  "main": "./dist/src/index.js",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    },
    "./pack": {
      "types": "./dist/src/pack.d.ts",
      "default": "./dist/src/pack.js"
    },
    "./install": {
      "types": "./dist/src/install.d.ts",
      "default": "./dist/src/install.js"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/src/index.d.ts",
  "files": [
    "./dist/src",
    "./src",
    "CHANGELOG.md",
    "!*.tsbuildinfo",
    "!tsconfig.json"
  ],
  "keywords": [
    "ts",
    "typescript",
    "midnight-smoker",
    "smoker",
    "smoke",
    "test",
    "testing"
  ],
  "scripts": {
    "test": "run-s test:unit test:smoke",
    "test:ci": "run-s test:unit test:e2e test:smoke",
    "test:e2e": "exit 0",
    "test:smoke": "smoker",
    "test:unit": "node --env-file=./test/test.env --env-file-if-exists=.test.env --import tsx --test \"test/**/*.test.ts\""
  },
  "peerDependencies": {
    "midnight-smoker": "^8.0.0"
  },
  "dependencies": {
    "xstate": "5.19.0"
  },
  "access": "public"
}
