{
  "name": "@midnight-smoker/plugin-default",
  "version": "0.0.0",
  "description": "Default behavior for midnight-smoker",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boneskull/midnight-smoker.git",
    "directory": "packages/plugin-default"
  },
  "homepage": "https://github.com/boneskull/midnight-smoker/tree/main/packages/plugin-default",
  "bugs": {
    "url": "https://github.com/boneskull/midnight-smoker/issues"
  },
  "author": "Christopher Hiller <boneskull@boneskull.com> (https://boneskull.com/)",
  "license": "Apache-2.0",
  "engines": {
    "node": "^18.0.0 || ^20.0.0 || ^22.0.0",
    "npm": ">=8.6.0"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "typedoc": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json",
    "./data": {
      "types": "./dist/package-manager/data.d.ts",
      "typedoc": "./src/package-manager/data.ts",
      "default": "./dist/package-manager/data.js"
    },
    "./reporter": {
      "types": "./dist/reporter/index.d.ts",
      "typedoc": "./src/reporter/index.ts",
      "default": "./dist/reporter/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "./data",
    "./dist",
    "./src",
    "CHANGELOG.md",
    "!*.tsbuildinfo",
    "!tsconfig.json"
  ],
  "keywords": [
    "ts",
    "typescript",
    "midnight-smoker",
    "smoker",
    "smoke",
    "test",
    "testing"
  ],
  "scripts": {
    "prepare": "ts-node ./scripts/update-pm-versions.ts",
    "test": "run-p test:unit",
    "test:e2e": "mocha \"test/e2e/**/*.spec.ts\" -p --timeout 5s --slow 2500",
    "test:smoke": "smoker",
    "test:snapshots-only": "npm run test:e2e -- --fgrep \"[snapshot]\"",
    "test:unit": "mocha \"test/unit/**/*.spec.ts\"",
    "test:update-snapshots": "cross-env SNAPSHOT_UPDATE=1 npm run test:e2e -- --fgrep \"[snapshot]\""
  },
  "peerDependencies": {
    "midnight-smoker": "^8.0.0"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "cli-progress": "3.12.0",
    "cli-table3": "0.6.4",
    "corepack": "0.24.1",
    "debug": "4.3.4",
    "execa": "5.1.1",
    "is-file-esm": "1.0.0",
    "json-stable-stringify": "1.0.2",
    "lodash": "4.17.21",
    "log-symbols": "4.1.0",
    "pluralize": "8.0.0",
    "stringify-object": "3.3.0",
    "term-size": "2.2.1",
    "terminal-kit": "3.1.1",
    "type-fest": "4.8.2",
    "wrap-ansi": "6.2.0"
  },
  "devDependencies": {
    "@midnight-smoker/test-util": "file:../test-util",
    "@types/cli-progress": "3.11.5",
    "@types/is-file-esm": "1.0.1",
    "@types/stringify-object": "3.3.1",
    "@types/terminal-kit": "2.5.6",
    "@types/wrap-ansi": "3.0.0",
    "midnight-smoker": "8.0.0",
    "semver": "7.5.4"
  },
  "access": "public"
}
