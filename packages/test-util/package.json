{
  "name": "@midnight-smoker/test-util",
  "version": "0.0.0",
  "description": "Test utilities for midnight-smoker plugins",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boneskull/midnight-smoker.git",
    "directory": "packages/test-util"
  },
  "homepage": "https://github.com/boneskull/midnight-smoker/tree/main/packages/test-util",
  "bugs": {
    "url": "https://github.com/boneskull/midnight-smoker/issues"
  },
  "author": "Christopher Hiller <boneskull@boneskull.com> (https://boneskull.com/)",
  "license": "Apache-2.0",
  "engines": {
    "node": "^18.0.0 || ^20.0.0 || ^22.0.0",
    "npm": ">=8.6.0"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "typedoc": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "typedoc": "./src/cli.ts",
      "default": "./dist/cli.js"
    },
    "./constants": {
      "types": "./dist/constants.d.ts",
      "typedoc": "./src/constants.ts",
      "default": "./dist/constants.js"
    },
    "./execa": {
      "types": "./dist/execa.d.ts",
      "typedoc": "./src/execa.ts",
      "default": "./dist/execa.js"
    },
    "./rule": {
      "types": "./dist/rule.d.ts",
      "typedoc": "./src/rule.ts",
      "default": "./dist/rule.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "./dist",
    "./src",
    "CHANGELOG.md",
    "!*.tsbuildinfo",
    "!tsconfig.json"
  ],
  "keywords": [
    "ts",
    "typescript",
    "midnight-smoker",
    "smoker",
    "smoke",
    "test",
    "testing"
  ],
  "scripts": {
    "test": "run-s test:unit test:smoke",
    "test:ci": "run-s test:unit test:e2e test:smoke",
    "test:e2e": "exit 0",
    "test:smoke": "smoker",
    "test:unit": "mocha \"test/unit/**/*.spec.ts\""
  },
  "peerDependencies": {
    "midnight-smoker": "^8.0.0"
  },
  "dependencies": {
    "debug": "4.3.4",
    "execa": "5.1.1",
    "lodash": "4.17.21",
    "semver": "7.5.4",
    "sinon": "16.1.3",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "midnight-smoker": "8.0.0"
  },
  "access": "public"
}
